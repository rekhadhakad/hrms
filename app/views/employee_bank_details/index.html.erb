<div id="page-wrapper">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="col-lg-12">
      <% if current_user.has_role? :admin %>
        <%#= link_to "Edit Info", edit_employee_path(@employee), :class=> "btn btn-primary", :id => "add_employee", :style => "float: right; margin-top: 24px;"%>
      <% end %>
        <h3 class="page-header">Employee Bank Details</h3> 
      </div>
    </div>

    <table class="table table-striped table-bordered table-hover dataTable no-footer" >
      <thead>
        <tr>
          <th>Emp No</th>
          <th>Name</th>
          <th>Pan no</th>
          <th>National id no</th>
          <th>Bank acc no</th>
          <th>Ifsc code</th>
          <th>Bank name</th>
          <th>Branch address</th>
          
        </tr>
      </thead>

      <tbody>
        <% @employee_bank_details.each do |employee_bank_detail| %>
          <tr>
            <% employee = Employee.where("id =? ", employee_bank_detail.employee_id).first%>
            <td><%= employee.employee_no %></td>
            <td><%= employee.first_name %></td>
            <td><%= employee_bank_detail.pan_no %></td>
            <td><%= employee_bank_detail.national_id_no %></td>
            <td><%= employee_bank_detail.bank_acc_no %></td>
            <td><%= employee_bank_detail.ifsc_code %></td>
            <td><%= employee_bank_detail.bank_name %></td>
            <td><%= employee_bank_detail.branch_address %></td>
            
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%#= link_to 'New Employee bank detail', new_employee_bank_detail_path %>
  </div>
</div>  
