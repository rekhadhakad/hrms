<div id="page-wrapper">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="col-lg-12">
      <% if current_user.has_role? :admin %>
        <%#= link_to "Edit Info", edit_employee_path(@employee), :class=> "btn btn-primary", :id => "add_employee", :style => "float: right; margin-top: 24px;"%>
      <% end %>
        <h3 class="page-header">Employee Educations Details</h3> 
      </div>
    </div>

    <table class="table table-striped table-bordered table-hover dataTable no-footer">
      <thead>
        <tr>
          <th>Emp No</th>
          <th>Name</th>
          <th>Exam passed</th>
          <th>Board or university</th>
          <th>Institut name</th>
          <th>Specialization</th>
          <th>Marks</th>
        </tr>
      </thead>

      <tbody>
        <% @employee_educations.each do |employee_education| %>
          <tr>
            <% employee = Employee.where("id =? ", employee_education.employee_id).first%>
            <td><%= employee.employee_no %></td>
            <td><%= employee.first_name %></td>
            <td><%= employee_education.exam_passed %></td>
            <td><%= employee_education.board_or_university %></td>
            <td><%= employee_education.institut_name %></td>
            <td><%= employee_education.specialization %></td>
            <td><%= employee_education.marks %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%#= link_to 'New Employee education', new_employee_education_path %>
  </div>
</div>    