<div id="page-wrapper">
  <div class="row">
    <p id="notice"><%= notice %></p>
     <div class="row">
      <div class="col-lg-12">
      <% if current_user.has_role? :admin %>
        <%#= link_to "Edit Info", edit_employee_path(@employee), :class=> "btn btn-primary", :id => "add_employee", :style => "float: right; margin-top: 24px;"%>
      <% end %>
        <h3 class="page-header">Employee Contacts Details</h3> 
      </div>
    </div>
    
    <table class="table table-striped table-bordered table-hover dataTable no-footer">
      <thead>
        <tr>
          <th>Emp No</th>
          <th>Name</th>
          <th>Address</th>
          <th>Current address</th>
          <th>Home phone</th>
          <th>Mobile no</th>
          <th>Alternet mobile no</th>
          <th>Email</th>
          <th>Father contact no</th>
        </tr>
      </thead>

      <tbody>
        <% @employee_contacts.each do |employee_contact| %>
          <tr>
            <% employee = Employee.where("id =? ", employee_contact.employee_id).first%>
            <td><%= employee.employee_no %></td>
            <td><%= employee.first_name %></td>
            <td><%= employee_contact.address %></td>
            <td><%= employee_contact.current_address %></td>
            <td><%= employee_contact.home_phone %></td>
            <td><%= employee_contact.mobile_no %></td>
            <td><%= employee_contact.alternet_mobile_no %></td>
            <td><%= employee_contact.email %></td>
            <td><%= employee_contact.father_contact_no %></td>
            
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%#= link_to 'New Employee contact', new_employee_contact_path %>
  </div>
</div>    
