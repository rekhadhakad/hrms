<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="well" style="width:50%;">
    <div class="form-group">
      <%= f.label :employee_no, :class=>"control-label" %><br />
        <%= f.text_field :employee_no, :class=>"form-control"%>
     </div>

    <div class="form-group">
      <%= f.label :first_name, :class=>"control-label" %><br />
      <%= f.text_field :first_name, :class=>"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :middle_name, :class=>"control-label" %><br />
      <%= f.text_field :middle_name, :class=>"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :last_name, :class=>"control-label" %><br />
      <%= f.text_field :last_name, :class=>"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :date_of_birth, :class=>"control-label" %><br />
      <%= f.date_field :date_of_birth, :class=>"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :marital_status, :class=>"control-label" %><br />
      <%= f.select :marital_status, ['Married', 'Single'], :class=>"form-control"%>
    </div>

    <div class="form-group">
      <%= f.label :father_name, :class=>"control-label " %><br />
      <%= f.text_field :father_name, :class=>"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :mother_name, :class=>"control-label" %><br />
      <%= f.text_field :mother_name, :class=>"form-control" %>
    </div>

   <div class="dropdown">
      <%= f.label :department, :class=>"control-label" %>
      <%= f.select :department, ['Select','PHP', 'ROR', 'Design', 'Android', 'Iphon', 'HR'], :class=>"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :technology, :class=>"control-label" %>
      <%= f.select :technology, ['Select','PHP', 'ROR', 'Design', 'Android', 'Iphon'], :class=>"form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :date_of_join, :class=>"control-label" %><br />
      <%= f.date_field :date_of_join, :class=>"form-control"  %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>  
<% end %>
