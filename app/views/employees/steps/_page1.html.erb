<div id="" class="col-md-3 first_page" style="margin-left: -125px;">    
  <div class="form-group">
    <%= f.label :employee_no, :class=>"control-label" %>
    <%= f.text_field :employee_no, :class=>"form-control", required: true%>
  </div>

  <div class="form-group">
    <%= f.label :first_name, :class=>"control-label" %>
    <%= f.text_field :first_name, :class=>"form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :middle_name, :class=>"control-label" %>
    <%= f.text_field :middle_name, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name, :class=>"control-label" %>
    <%= f.text_field :last_name, :class=>"form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :date_of_birth, :class=>"control-label" %>
    <%= f.text_field :date_of_birth, :class => "form-control", :placeholder => "mm/dd/yyyy", "data-provide" => "datepicker", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :marital_status, :class=>"control-label" %>
    <%= f.select :marital_status, ['Married', 'Single'], {:prompt => 'Select Marital Status'},  { :class => 'form-control', :style => "width: 254% !important;"}%>
  </div>
</div>  
<div class="col-md-8" style="margin-left: 174px;">  
  <div class="form-group">
    <%= f.label :father_name, :class=>"control-label " %>
    <%= f.text_field :father_name, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :mother_name, :class=>"control-label" %>
    <%= f.text_field :mother_name, :class=>"form-control" %>
  </div>

  <div class="dropdown">
    <%= f.label :department, :class=>"control-label" %>
    <%= f.select :department, ['PHP', 'ROR', 'Design', 'Android', 'Iphon', 'HR'],{:prompt => 'Select Department'}, { :class => 'form-control', :style => "width: 82%;"} %>
  </div>

  <div class="form-group">
    <%= f.label :technology, :class=>"control-label" %>
    <%= f.select :technology, ['PHP', 'ROR', 'Design', 'Android', 'Iphon'], {:prompt => 'Select Technology'}, { :class => 'form-control', :style => "width: 82%;"} %>
  </div>
      
  <div class="form-group">
    <%= f.label :joining_date, :class=>"control-label" %>
    <%= f.text_field :joining_date, :class => "form-control", :placeholder=> "mm/dd/yyyy", "data-provide" => "datepicker" %> 
  </div>
</div>    
