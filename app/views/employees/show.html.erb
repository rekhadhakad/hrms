<div id="page-wrapper">
  <div class="row">

    <div class="row">
      <div class="col-lg-12">
      <% if current_user.has_role? :admin %>
        <%= link_to "Edit Info", edit_employee_path(@employee), :class=> "btn btn-primary", :id => "add_employee", :style => "float: right; margin-top: 24px;"%>
      <% end %>
        <h3 class="page-header"><%= @employee.first_name %> <%= @employee.last_name%></h3> 
      </div>
    </div>
      <p id="notice"><%= notice %></p>

      <div class="col-sm-6 col-lg-3">
        <h4 class="emp_font"> <b>Employee Details</b> </h4>
        <p>
          <strong>Employee no:</strong>
          <%= @employee.employee_no %>
        </p>

       
        <p>
          <strong>Middle name:</strong>
          <%= @employee.middle_name %>
        </p>

        <p>
          <strong>Last name:</strong>
          <%= @employee.last_name %>
        </p>

        <p>
          <strong>Date of birth:</strong>
          <%= @employee.date_of_birth %>
        </p>

        <p>
          <strong>Marital status:</strong>
          <%= @employee.marital_status %>
        </p>

        <p>
          <strong>Father name:</strong>
          <%= @employee.father_name %>
        </p>

        <p>
          <strong>Mother name:</strong>
          <%= @employee.mother_name %>
        </p>
        <p>
          <strong>Technology:</strong>
          <%= @employee.technology %>
        </p>

        <p>
          <strong>Date of join:</strong>
          <%= @employee.joining_date %>
        </p>
      </div>


          <div class="col-sm-6 col-lg-3">
            <h4 class="emp_font"> <b>Employee Contact Details</b> </h4>  
          <p>
            <strong>Address:</strong>
            <%= @employee.address %>
          </p>
          <p>
            <strong>Current Address:</strong>
            <%= @employee.current_address %>
          </p>
          <p>
            <strong>Home Phone:</strong>
            <%= @employee.home_phone %>
          </p>
          <p>
            <strong>Mobile Number:</strong>
            <%= @employee.mobile_no %>
          </p>
          <p>
            <strong>Alternet Mobile No:</strong>
            <%= @employee.alternet_mobile_no %>
          </p>
          <p>
            <strong>Email:</strong>
            <%= @employee.email %>
          </p>
          <p>
            <strong>Father Contact No:</strong>
            <%= @employee.father_contact_no %>
          </p>
        </div>
        <div class="col-sm-6 col-lg-3">  
        <h4 class="emp_font"> <b>Education Details</b> </h4>  
          <p>
            <strong>Exam Passed:</strong>
            <%= @employee.exam_passed %>
          </p>
          <p>
            <strong>Board Or University:</strong>
            <%= @employee.board_or_university %>
          </p>
          <p>
            <strong>Institut Name:</strong>
            <%= @employee.institut_name %>
          </p>
          <p>
            <strong>Specialization:</strong>
            <%= @employee.specialization %>
          </p>
          <p>
            <strong>Marks:</strong>
            <%= @employee.marks %>
          </p>
        </div> 
         
        <div class="col-sm-6 col-lg-3">  
        <h4 class="emp_font"> <b>Bank Details</b> </h4> 
          <p>
            <strong>PAN No:</strong>
            <%= @employee.pan_no %>
          </p>
          <p>
            <strong>National Id No:</strong>
            <%= @employee.national_id_no %>
          </p>
          <p>
            <strong>Bank A/C No:</strong>
            <%= @employee.bank_acc_no %>
          </p>
          <p>
            <strong>Ifsc Code:</strong>
            <%= @employee.ifsc_code %>
          </p>
          <p>
            <strong>Bank Name:</strong>
            <%= @employee.bank_name %>
          </p>
           <p>
            <strong>Branch Address:</strong>
            <%= @employee.branch_address %>
          </p>
